        </div>*@

        @*<p>@entry.Name</p>
            <p>@entry.PhoneNumber</p>
            <p>@string.Join(" : ", entry.AssociatedPhonebooks)</p>*@

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@entry.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@string.Join(" : ", entry.AssociatedPhonebooks)</h6>
                <p class="card-text">@entry.PhoneNumber</p>
            </div>
        </div>
    }
</div>
}
else
